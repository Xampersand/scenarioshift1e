					<option value="{{type}}" {{#if (eq system.damageType type)}}selected{{/if}}>{{type}}</option>
				{{/each}}
			</select>
		{{else}}
			<div
				class='skill-info-value'
			>{{system.diceNum}}{{system.diceSize}}&nbsp;+&nbsp;{{system.diceBonus}}&nbsp;{{system.damageType}}</div>
		{{/if}}
	</div>
