	<div class='skill-info-line'>
		<label class='skill-info-label'>USES WEAPON?&nbsp;</label>
		<select name="system.isAttackSkill" id="">
			<option value="{{system.isAttackSkill}}">{{system.isAttackSkill}}</option>
			<option value="true">True</option>
			<option value="false">False</option>
		</select>
	</div>
