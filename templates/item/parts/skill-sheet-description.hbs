<div class='skill-info-line'>
	<label class='skill-info-label'>MANA&nbsp;COST:&nbsp;</label>
	{{#if isEditing}}
		<input
			type='number'
			name='system.manaCost'
			placeholder='mana cost'
			value='{{system.manaCost}}'
		/>
	{{else}}
