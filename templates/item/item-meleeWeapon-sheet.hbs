<form class='{{cssClass}} flexcol' autocomplete='off'>
	<link
		href='https://fonts.googleapis.com/css2?family=Teko:wght@300..700&display=swap'
		rel='stylesheet'
	/>
	<button class='edit-mode-toggle'>Edit</button>
	<section class='weapon-top-section'>
		<img
			class='weapon-img'
			src='{{item.img}}'
			data-edit='img'
			title='{{item.name}}'
			height='200px'
			width='200px'
		/>
		<div class='weapon-title'>
			<div class='weapon-name'>
				{{#if isEditing}}
					<!-- Editable fields here -->
					<input
						name='name'
						type='text'
						value='{{item.name}}'
						placeholder='NAME'
					/>
				{{else}}
					<!-- Non-editable display here -->
					<div>{{item.name}}</div>
				{{/if}}
			</div>
			<div class='weapon-rarity'>
				<label for='system.rarity'>RARITY:&nbsp;</label>
				{{#if isEditing}}
					<!-- Editable fields here -->
					<input
						name='system.rarity'
						type='text'
						value='{{system.rating}}'
						placeholder='COMMON'
					/>
				{{else}}
					<!-- Non-editable display here -->
					<div>{{system.rating}}</div>
				{{/if}}

			</div>
		</div>
	</section>

	{{! Sheet Body }}
	<section class='weapon-bottom-section'>
		<div class='stats'>
			<div class='requirement'>
				<label for='system.requirement'>REQUIRES:&nbsp;</label>
				{{#if isEditing}}
					<!-- Editable fields here -->
					<input
						name='system.requirement'
						type='text'
						value='{{system.requirement.value}}'
						placeholder=''
					/>
					<input
						name='system.requirement-type'
						type='text'
						value='{{system.requirement.type}}'
						placeholder='str'
					/>
				{{else}}
					<!-- Non-editable display here -->
					<span>{{system.requirement.value}}&nbsp;</span>
					<span>{{system.requirement.type}}</span>
				{{/if}}
			</div>
			<div class='damage'>
				<label for='system.damage'>DAMAGE:&nbsp;</label>
				{{#if isEditing}}
					<!-- Editable fields here -->
					<input
						name='system.damageRoll.diceNum'
						type='text'
						value='{{system.damageRoll.diceNum}}'
						placeholder='1'
					/>
					<input
						name='system.damageRoll.diceSize'
						type='text'
						value='{{system.damageRoll.diceSize}}'
						placeholder='d4'
					/>
					<input
						name='system.damageRoll.diceBonus'
						type='text'
						value='{{system.damageRoll.diceBonus}}'
						placeholder='1'
					/>
					<input
						name='system.damageType'
						type='text'
						value='{{system.damageType}}'
						placeholder='piercing'
					/>
				{{else}}
					<!-- Non-editable display here -->
					<span>{{system.damageFormula}}&nbsp;</span>
					<span>{{system.damageType}}</span>
				{{/if}}

			</div>
			<div class='accuracy'>
				<label for='system.accuracy'>
					ACCURACY:&nbsp;
				</label>
				{{#if isEditing}}
					<!-- Editable fields here -->
					<input
						name='system.accuracy'
						type='text'
						value='{{system.accuracy}}'
						placeholder='1'
					/>
				{{else}}
					<!-- Non-editable display here -->
					<span>{{system.accuracy}}</span>
				{{/if}}
			</div>
			<div class='range'>
				<label for='system.range'>
					RANGE:&nbsp;
				</label>
				{{#if isEditing}}
					<!-- Editable fields here -->
					<input
						name='system.range'
						type='text'
						value='{{system.range}}'
						placeholder='1'
					/>
				{{else}}
					<!-- Non-editable display here -->
					<span>{{system.range}}</span>
				{{/if}}

			</div>
			{{! add another div here for each stat/bonus }}
		</div>
		<div class='weapon-actions'>
			<button>ROLL ACCURACY</button>
			<button>ROLL DAMAGE</button>
			<button>SEND TO SOMEONE</button>
		</div>

	</section>
</form>