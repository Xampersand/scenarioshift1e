<form class='{{cssClass}} flexcol' autocomplete='off'>
	<link
		href='https://fonts.googleapis.com/css2?family=Teko:wght@300..700&display=swap'
		rel='stylesheet'
	/>
	<button class='edit-mode-toggle'>üìù</button>
	<section class='weapon-top-section'>
		<img
			class='weapon-img'
			src='{{item.img}}'
			data-edit='img'
			title='{{item.name}}'
			height='200px'
			width='200px'
		/>
		<div class='weapon-title'>
			<div class='weapon-name'>
				{{#if isEditing}}
					<!-- Editable fields here -->
					<input
						name='name'
						type='text'
						value='{{item.name}}'
						placeholder='NAME'
					/>
				{{else}}
					<!-- Non-editable display here -->
					<div>{{item.name}}</div>
				{{/if}}
			</div>
			<div class='weapon-rarity'>
				<label for='system.rating'>RATING:&nbsp;</label>
				{{#if isEditing}}
					<!-- Editable fields here -->
					<input
						name='system.rating'
						type='text'
						value='{{system.rating}}'
						placeholder='COMMON'
					/>
				{{else}}
					<!-- Non-editable display here -->
					<div>{{system.rating}}</div>
				{{/if}}

			</div>
		</div>
	</section>

	{{! Sheet Body }}
	<section class='weapon-bottom-section'>
		<div class='stats'>
			<div class='requirement'>
				<label for='system.requirement'>REQUIRES:&nbsp;</label>
				{{#if isEditing}}
					<!-- Editable fields here -->
					<input
						name='system.requirement.value'
						type='text'
						value='{{system.requirement.value}}'
						placeholder=''
					/>
					<input
						name='system.requirement.type'
						type='text'
						value='{{system.requirement.type}}'
						placeholder='str'
					/>
				{{else}}
					<!-- Non-editable display here -->
					<div>{{system.requirement.value}}
						{{system.requirement.type}}</div>
				{{/if}}
			</div>
			<div class='damage'>
				<label for='system.damageModifier'>DAMAGE MODIFIER:&nbsp;</label>
				{{#if isEditing}}
					<!-- Editable fields here -->
					<input
						name='system.damageModifier'
						type='text'
						value='{{system.damageModifier}}'
						placeholder='10%'
					/>
				{{else}}
					<!-- Non-editable display here -->
					<span>{{system.damageModifier}}</span>
				{{/if}}
			</div>
			<div class='accuracy'>
				<label for='system.accuracy'>ACCURACY:&nbsp;</label>
				{{#if isEditing}}
					<!-- Editable fields here -->
					<input
						name='system.accuracy'
						type='text'
						value='{{system.accuracy}}'
						placeholder='1'
					/>
				{{else}}
					<!-- Non-editable display here -->
					<span>{{system.accuracy}}</span>
				{{/if}}
			</div>
			<div class='range'>
				<label for='system.range'>RANGE:&nbsp;</label>
				{{#if isEditing}}
					<!-- Editable fields here -->
					<input
						name='system.range'
						type='text'
						value='{{system.range}}'
						placeholder='1'
					/>
				{{else}}
					<!-- Non-editable display here -->
					<span>{{system.range}}</span>
				{{/if}}
			</div>
		</div>
		<div class='weapon-actions'>
			<button>ROLL ACCURACY</button>
			<button>ROLL DAMAGE</button>
			<button>SEND TO SOMEONE</button>
		</div>
	</section>

</form>