<form class='{{cssClass}} flexcol' autocomplete='off'>
	<link
		href='https://fonts.googleapis.com/css2?family=Teko:wght@300..700&display=swap'
		rel='stylesheet'
	/>
	<button class='edit-mode-toggle'>Edit</button>
	<section class='equipment-top-section'>
		<img
			class='equipment-img'
			src='{{item.img}}'
			data-edit='img'
			title='{{item.name}}'
			height='200px'
			width='200px'
		/>
		<div class='equipment-title'>
			<div class='equipment-name'>
				{{#if isEditing}}
					<!-- Editable fields here -->
					<input
						name='name'
						type='text'
						value='{{item.name}}'
						placeholder='NAME'
					/>
				{{else}}
					<!-- Non-editable display here -->
					<div>{{item.name}}</div>
				{{/if}}
			</div>
			<div class='equipment-rarity'>
				<label for='system.rarity'>RARITY:</label>
				{{#if isEditing}}
					<!-- Editable fields here -->
					<input
						name='system.rarity'
						type='text'
						value='{{system.rarity}}'
						placeholder='COMMON'
					/>
				{{else}}
					<!-- Non-editable display here -->
					<div>{{system.rarity}}</div>
				{{/if}}
			</div>
		</div>
	</section>

	{{! Sheet Body }}
	<section class='equipment-bottom-section'>
		<div class='stats'>
			<div class='requirement'>
				<label for='system.requirement'>REQUIRES:</label>
				{{#if isEditing}}
					<!-- Editable fields here -->
					<input
						name='system.requirement'
						type='text'
						value='{{system.requirement}}'
						placeholder=''
					/>
					<input
						name='system.requirement-type'
						type='text'
						value='{{system.requirement-type}}'
						placeholder='str'
					/>
				{{else}}
					<!-- Non-editable display here -->
					<div>{{system.requirement}}</div>
					<div>{{system.requirement-type}}</div>
				{{/if}}

			</div>
			<div class='defense'>
				<label for='system.defense'>Defense:</label>
				{{#if isEditing}}
					<!-- Editable fields here -->
					<input
						name='system.defense'
						type='text'
						value='{{system.defense}}'
						placeholder='10'
					/>
					<input
						name='system.type'
						type='text'
						value='{{system.type}}'
						placeholder='armor'
					/>
				{{else}}
					<!-- Non-editable display here -->
					<div>{{system.defense}}</div>
					<div>{{system.type}}</div>
				{{/if}}

			</div>
			{{! add another div here for each stat/bonus }}
		</div>
		<div class='equipment-actions'>
			<button>SEND TO SOMEONE</button>
		</div>

	</section>
</form>