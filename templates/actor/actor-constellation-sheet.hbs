<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

	<!-- Character Information Section moved to the very top below the controls -->
	{{! Sheet Header }}
	<header class="sheet-header">
		<div class="character-info-header">&lt;CHARACTER INFORMATION&gt;</div>
		<img
			class="profile-img"
			src="{{actor.img}}"
			data-edit="img"
			title="{{actor.name}}"
			height="150"
			width="150"
		/>
		<div class="header-fields">
			<!-- Display the label separately -->
			<label for="name" class="input-label">NAME:</label>
			<h1 class="charname">
				<input
					name="name"
					id="name"
					class="input-text"
					type="text"
					value="{{actor.name}}"
					placeholder="Name"
				/>
			</h1>
			<label for="grade" class="input-label">GRADE:</label>
			<h1 class="charname">
				<input
					name="system.grade"
					id="grade"
					class="input-text"
					type="text"
					value="{{system.grade}}"
					placeholder="None"
				/>
			</h1>
			<label for="incarnation" class="input-label">INCARNATION:</label>
			<h1 class="charname">
				<input
					name="system.incarnation"
					id="incarnation"
					class="input-text"
					type="text"
					value="{{system.incarnation}}"
					placeholder="None"
				/>
			</h1>
			<label for="trueName" class="input-label">INCARNATION:</label>
			<h1 class="charname">
				<input
					name="system.incarnation"
					id="incarnation"
					class="input-text"
					type="text"
					value="{{system.incarnation}}"
					placeholder="None"
				/>
			</h1>
		</div>
	</header>

	<section class="sheet-body scenarioshift1e">
		<!-- Left column -->

	</section>

</form>