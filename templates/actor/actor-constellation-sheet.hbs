<form
	class='{{cssClass}} {{actor.type}} flexcol constellation form'
	autocomplete='off'
>

	<!-- Character Information Section moved to the very top below the controls -->
	<link
		rel='stylesheet'
		href='https://fonts.googleapis.com/css?family=Garamond'
	/>
	<section class='ss1e sheet actor constellation header'>
		<div class='header title'>&lt;CONSTELLATION INFORMATION&gt;</div>
		<div class='header info'>
			<!-- First Column: Profile Image -->
			<img
				class='profile-img'
				src='{{actor.img}}'
				data-edit='img'
				title='{{actor.name}}'
				height='250'
				width='250'
			/>
			<!-- Second Column: Modifier, True Name, Grade, Incarnation -->
			<div class='info-container'>
				<label for='name' class='input-label'>MODIFIER:</label>
				<input
					name='name'
					id='name'
					class='input-text'
					type='text'
					value='{{actor.name}}'
					placeholder='name'
				/>
				<label for='trueName' class='input-label'>TRUE NAME:</label>

				<input
					name='system.trueName'
					id='trueName'
					class='input-text'
					type='text'
					value='{{system.trueName}}'
					placeholder='true_name'
				/>
				<label for='grade' class='input-label'>GRADE:</label>
				<input
					name='system.grade'
					id='grade'
					class='input-text'
					type='text'
					value='{{system.grade}}'
					placeholder='grade'
				/>
				<label for='incarnation' class='input-label'>INCARNATION:</label>
				<input
					name='system.incarnation'
					id='incarnation'
					class='input-text'
					type='text'
					value='{{system.incarnation}}'
					placeholder='incarnation'
				/>
			</div>
		</div>
	</section>
	<section class='ss1e sheet actor constellation actions'>
		<div class='ss1e sheet actor constellation coins'>
			<div class='coin-counter'>
				<label for='system.coins' class='' data-label='Coins:'>Coins:</label>
				<input
					type='text'
					class=''
					name='system.coins'
					value='{{system.coins}}'
					data-dtype='Number'
				/></div>
			<div class='coin-buttons'>
				<button class='' data-action='openCurrencyPanel'>Manage Coins</button>
				<button class='' data-action='sendCoins'>Send Coins</button>
			</div>
		</div>
		<div class='ss1e sheet actor constellation messages'>
			<div class='message-top-section'>
				<div class='message-recipient'>
					<label for='messageRecepient' class=''>Select Message Recipient:</label>
					<select id='messageRecepient' name='messageRecepient' class=''>
						<option value='public'>Public</option>
						{{#each players}}
							<option value='{{this.id}}'>{{this.name}}</option>
						{{/each}}
					</select>
				</div>
				<div class='preset-message-buttons'>
					<button
						class=''
						data-action='sendPreset'
						data-message='{{actor.name}} is saddened by the situation.'
					>SADNESS</button>
					<button
						class=''
						data-action='sendPreset'
						data-message='{{actor.name}} is disgusted by what transpired.'
					>DISGUST</button>
					<button
						class=''
						data-action='sendPreset'
						data-message='{{actor.name}} rejoices at the sight!'
					>JOY</button>
					<button
						class=''
						data-action='sendPreset'
						data-message='{{actor.name}} is angered by the choices made!'
					>BORED</button>
					<button
						class=''
						data-action='sendPreset'
						data-message='{{actor.name}} sighs in boredom.'
					>ANGER</button>
					<button
						class=''
						data-action='sendPreset'
						data-message='{{actor.name}} jumps up and down with excitement!'
					>EXCITED</button>
					<button
						class=''
						data-action='sendPreset'
						data-message='{{actor.name}} is covering their eyes!'
					>CANT LOOK</button>
					<button
						class=''
						data-action='sendPreset'
						data-message='{{actor.name}} has tears streaming down their face!'
					>CRY</button>
					<!-- Add more buttons as needed -->
				</div>
			</div>
			<div class='message-bottom-section'>
				<label for='messageInput' class=''>Or type your message:</label>
				<input type='text' id='messageInput' class='' placeholder='' />
				<button class='' data-action='sendCustom'>Send Custom Message</button>
			</div>
		</div>
	</section>
</form>