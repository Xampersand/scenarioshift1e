<form class='{{cssClass}} {{actor.type}} flexcol' autocomplete='off'>

	<!-- Character Information Section moved to the very top below the controls -->
	<button class='edit-mode-toggle'>üìù</button>
	<section class='ss1e sheet actor constellation header'>
		<div class='header title'>&lt;CONSTELLATION INFORMATION&gt;</div>
		<div class='header info'>
			<!-- First Column: Profile Image -->
			<img
				class='profile-img'
				src='{{actor.img}}'
				data-edit='img'
				title='{{actor.name}}'
				height='250'
				width='250'
			/>
			<!-- Second Column: Modifier, True Name, Grade, Incarnation -->
			<div class='info-container'>
				<label for='name' class='input-label'>MODIFIER:</label>
				{{#if isEditing}}
					<!-- Editable fields here -->
					<input
						name='name'
						id='name'
						class='input-text'
						type='text'
						value='{{actor.name}}'
						placeholder='name'
					/>
				{{else}}
					<!-- Non-editable display here -->
					<div>{{actor.name}}</div>
				{{/if}}

				<label for='trueName' class='input-label'>TRUE NAME:</label>
				{{#if isEditing}}
					<!-- Editable fields here -->
					<input
						name='system.trueName'
						id='trueName'
						class='input-text'
						type='text'
						value='{{system.trueName}}'
						placeholder='true_name'
					/>
				{{else}}
					<!-- Non-editable display here -->
					<div>{{system.trueName}}</div>
				{{/if}}
				<label for='grade' class='input-label'>GRADE:</label>
				{{#if isEditing}}
					<!-- Editable fields here -->
					<input
						name='system.grade'
						id='grade'
						class='input-text'
						type='text'
						value='{{system.grade}}'
						placeholder='grade'
					/>
				{{else}}
					<!-- Non-editable display here -->
					<div>{{system.grade}}</div>
				{{/if}}
				<label
					for='incarnation'
					class='input-label'
				>INCARNATION:</label>
				{{#if isEditing}}
					<!-- Editable fields here -->
					<input
						name='system.incarnation'
						id='incarnation'
						class='input-text'
						type='text'
						value='{{system.incarnation}}'
						placeholder='incarnation'
					/>
				{{else}}
					<!-- Non-editable display here -->
					<div>{{system.incarnation}}</div>
				{{/if}}

			</div>
		</div>
	</section>
	{{! second part of the sheet, contains coins and chat messages }}
	<section class='ss1e sheet actor constellation actions'>
		<div class='ss1e sheet actor constellation coins'>
			<div class='coin-counter'>
				<label
					for='system.coins'
					class='actor-sheet-label'
					data-label='Coins:'
				>Coins:</label>
				<input
					type='text'
					class='actor-sheet-input'
					name='system.coins'
					value='{{system.coins}}'
					data-dtype='Number'
				/></div>
			<div class='coin-buttons'>
				<button
					class='constellation-sheet-button'
					data-action='openCurrencyPanel'
				>Manage Coins</button>
				<button
					class='constellation-sheet-button'
					data-action='sendCoins'
				>Send Coins</button>
			</div>
		</div>
		<div class='ss1e sheet actor constellation messages'>
			<div class='message-top-section'>
				<div class='message-recipient'>
					<label for='messageRecipient' class=''>Select Message
						Recipient:</label>
					<select
						id='messageRecipient'
						name='messageRecipient'
						class='message-recipient-dropdown'
					>
						<option
							value='public'
							class='message-recipient-option'
						>Public</option>
						{{#each players}}
							<option
								value='{{this.id}}'
								class='message-recipient-option'
							>{{this.name}}</option>
						{{/each}}
					</select>
				</div>
				{{> constellation-messages }}
			</div>
			<div class='message-bottom-section'>
				<label for='messageInput' class=''>Type a custom message:</label>
				<input type='text' id='messageInput' class='' placeholder='' />
				<button
					class='constellation-sheet-button'
					data-action='sendCustom'
					data-cost='1000'
				>Send Custom Message</button>
			</div>
		</div>
	</section>
</form>