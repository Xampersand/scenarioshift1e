<form class='{{cssClass}} {{actor.type}} flexcol' autocomplete='off'>
  <!-- 1st Row: Character Information Title -->
  <button class='edit-mode-toggle'>üìù</button>
  <nav class='sheet-tabs tabs'>
    <a class='item' data-tab='features'>Features</a>
    <a class='item' data-tab='inventory'>Inventory</a>
    <a class='item' data-tab='abilities'>Abilities</a>
    <!-- Add more tabs as necessary -->
  </nav>
  <section class='ss1e sheet actor character'>

    <div class='sheet-body'>
      <div class='tab' data-tab='features'>
        <div class='sheet-title'>&lt;CHARACTER INFORMATION&gt;</div>
        <div class='sheet-header info'>
          <div class='pfp-hp-mana'>
            {{#if isEditing}}
              <img
                class='profile-img'
                src='{{actor.img}}'
                data-edit='img'
                title='{{actor.name}}'
                height='180'
                width='180'
              />
            {{else}}
              <img
                class='profile-img'
                src='{{actor.img}}'
                title='{{actor.name}}'
                height='180'
                width='180'
              />
            {{/if}}
            {{!-- <img src="systems/ss1e/assets/images/picture-frame-four.png" class="picture-frame"alt=""> --}}
            <div class='hp-mana-container'>
              <div class='hp-block' id='hp-bar'>
                <div class='hp-bar-container'>
                  <div
                    class='hp-bar'
                    style='width: {{hpBarWidth}}%;'
                  ></div><span
                    class='hp-text'
                  >{{system.resources.health.value}}/{{system.resources.health.max}}</span>

                </div>
              </div>
              <div class='mana-block' id='mana-bar'>
                <div class='mana-bar-container'>
                  <div
                    class='mana-bar'
                    style='width: {{manaBarWidth}}%;'
                  ></div><span
                    class='mana-text'
                  >{{system.resources.mana.value}}/{{system.resources.mana.max}}</span>
                </div>
              </div>
            </div>
          </div>
          <div class='info-container'>
            <label for='name' class='input-label'>NAME:</label>
            {{#if isEditing}}
              <!-- Editable fields here -->
              <input
                name='name'
                id='name'
                class='input-text'
                type='text'
                value='{{actor.name}}'
                placeholder='Name'
              />
            {{else}}
              <!-- Non-editable display here -->
              <span>{{actor.name}}</span>
            {{/if}}

            <label for='age' class='input-label'>AGE:</label>
            {{#if isEditing}}
              <!-- Editable fields here -->
              <input
                type='text'
                id='age'
                class='input-text'
                name='system.age'
                value='{{system.age}}'
                data-dtype='Number'
                placeholder='Age'
              />
            {{else}}
              <!-- Non-editable display here -->
              <div>{{system.age}}</div>
            {{/if}}
            <label for='race' class='input-label'>RACE:</label>
            {{#if isEditing}}
              <!-- Editable fields here -->
              <input
                type='text'
                id='age'
                class='input-text'
                name='system.race'
                value='{{system.race}}'
                placeholder='Race'
              />
            {{else}}
              <!-- Non-editable display here -->
              <span>{{system.race}}</span>
            {{/if}}
          </div>
          <div class='attribute-container'>
            <div class='attributes'>
              <label for='sponsor'>SPONSOR:</label>
              {{#if isEditing}}
                <!-- Editable fields here -->
                <input
                  type='text'
                  id='sponsor'
                  class='input-text'
                  name='system.sponsor'
                  value='{{system.sponsor}}'
                  placeholder='Sponsor'
                />
              {{else}}
                <!-- Non-editable display here -->
                <span>{{system.sponsor}}</span>
              {{/if}}
              <label>ATTRIBUTES:</label>
              {{#if isEditing}}
                <input
                  type='text'
                  id='attributes'
                  class='input-text'
                  name='system.attributes'
                  value='{{system.attributes}}'
                  placeholder='Attributes'
              {{else}}
                <span>{{system.attributes}}</span>
              {{/if}}
              <label>STIGMAS:</label>
              {{#if isEditing}}
                <input
                  type='text'
                  id='stigmas'
                  class='input-text'
                  name='system.stigmas'
                  value='{{system.stigmas}}'
                  placeholder='Stigmas'
                />
              {{else}}
                <span>{{system.stigmas}}</span>
              {{/if}}
            </div>
          </div>
        </div>
        <div class='body'>
          <div class='stat-related'>
            <div class='combat-stat-container'>
              <div class="action-point-container">
                <input type="checkbox" id="action-point-one" checked>
                <input type="checkbox" id="action-point-two" checked>
                <input type="checkbox" id="action-point-three" checked>
                <input type="checkbox" id="action-point-four" checked>
              </div>
              {{#each system.derived as |stat key|}}
                {{#if
                  (or (eq key 'accuracy') (eq key 'armor') (eq key 'evasion'))
                }}
                  <div class='combat-stat-block'>
                    <label
                      class='{{key}}-label'
                      for='{{key}}-stat'
                    >{{stat.label}}:&nbsp;</label>
                    <span class='{{key}}-stat'>{{stat.value}}
                     <!-- (+{{stat.bonus}}) -->
                    </span>
                  </div>
                {{/if}}
              {{/each}}
            </div>
            <div class='stat-container'>
              {{#each system.stats as |stat key|}}
                <div class='stat-flexrow'>
                  <div class='combat-stat-block'>
                    <label
                      class='{{key}}-label'
                      for='{{key}}-stat'
                      data-action='rollStat'
                      data-key='{{key}}'
                    >{{stat.label}}:&nbsp;</label>
                    <span class='{{key}}-stat'>{{stat.value}}
                      <!-- (+{{stat.bonus}}) --></span>
                  </div>
                  <button
                    class='resource-span'
                    data-action='attributeLevelUp'
                    data-key='{{key}}'
                  >+</button>
                </div>
              {{/each}}
            </div>
            <div class='coin-container flexrow'>
              <div class="coin-text-container"><label
              for='system.coins'
              class='resource-label'
              data-label='Coins:'
            >
              Coins:
            </label>
            <span
              class='resource-label'
              name='system.coins'
            >{{system.coins}}</span></div>
            
            <button
              class='resource-label'
              data-action='openCurrencyPanel'
            >MANAGE COINS</button>
            <button class='resource-label' data-action='sendCoins'>SEND COINS</button>
          </div>
          </div>
          
        </div>
        <div class='bottom'>
          <div class='favorite-items'>
            <button id='roll-accuracy' class='rollable'>Roll Accuracy</button>
            {{#each actor.items as |item|}}
              {{#if (and (eq item.type 'meleeWeapon') item.system.equipped)}}
                <button
                  class='rollable'
                  data-item-id='{{item._id}}'
                  data-action='rollWeaponAccuracy'
                >
                  Roll
                  {{item.name}}
                  Accuracy
                </button>
              {{/if}}
            {{/each}}
            {{#each actor.items as |item|}}
              {{#if (and (eq item.type 'rangedWeapon') item.system.equipped)}}
                <button
                  class='rollable'
                  data-item-id='{{item._id}}'
                  data-action='rollWeaponAccuracy'
                >
                  Roll
                  {{item.name}}
                  Accuracy
                </button>
              {{/if}}
            {{/each}}
          </div>
          <div class='quick-actions'>
            <button id='roll-unarmed-damage'>Roll Unarmed Damage</button>
            {{#each actor.items as |item|}}
              {{#if (and (eq item.type 'meleeWeapon') item.system.equipped)}}
                <button
                  class='rollable'
                  data-item-id='{{item._id}}'
                  id='roll-melee-weapon'
                >Roll
                  {{item.name}}
                  Damage</button>
              {{/if}}
            {{/each}}
            {{#each actor.items as |weapon|}}
              {{#if
                (and (eq weapon.type 'rangedWeapon') weapon.system.equipped)
              }}
                {{#each actor.items as |ammo|}}
                  {{#if (and (eq ammo.type 'ammo') ammo.system.equipped)}}
                    <button
                      class='rollable'
                      data-weapon-id='{{weapon._id}}'
                      data-ammo-id='{{ammo._id}}'
                      id='roll-ranged-weapon'
                    >
                      Roll
                      {{weapon.name}}
                      with
                      {{ammo.name}}
                    </button>
                  {{/if}}
                {{/each}}
              {{/if}}
            {{/each}}
          </div>
        </div>
      </div>
      <div class='tab character-inventory' data-tab='inventory'>
        <div class='sheet-title'>&lt;INVENTORY&gt;</div>
        <!-- Inventory content here -->
        {{> inventory}}
      </div>
      <div class='tab' data-tab='abilities'>
        <div class='sheet-title'>&lt;SKILLS&gt;</div>
        <!-- Abilities content here -->
        <div>THIS IS THE ABILITIES PAGE</div>
      </div>
      <!-- Add more tab content as necessary -->
    </div>
    <div style='height: 50px;'></div>
    <!-- Placeholder spacing -->
  </section>
</form>