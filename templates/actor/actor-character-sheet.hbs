<form class='{{cssClass}} {{actor.type}} flexcol' autocomplete='off'>
	<!-- 1st Row: Character Information Title -->
	<link
		href='https://fonts.googleapis.com/css2?family=Teko:wght@300..700&display=swap'
		rel='stylesheet'
	/>
	<button class='edit-mode-toggle'>üõ†Ô∏è</button>
	<nav class='sheet-tabs tabs'>
		<a class='item' data-tab='features'>Features</a>
		<a class='item' data-tab='inventory'>Inventory</a>
		<a class='item' data-tab='abilities'>Abilities</a>
		<!-- Add more tabs as necessary -->
	</nav>
	<section class='ss1e sheet actor character'>
		<div class='sheet-title'>&lt;CHARACTER INFORMATION&gt;</div>
		<div class='sheet-body'>
			<div class='tab' data-tab='features'>
				<div class='sheet-header info'>
					<div class="pfp-hp-mana">
						<img
						class='profile-img'
						src='{{actor.img}}'
						data-edit='img'
						title='{{actor.name}}'
						height='175'
						width='175'
						/>
						<div class="hp-mana-container">
						<div class='hp-block'>
							<div class='hp-bar-container'>
								<div class='hp-bar' style='width: {{hpBarWidth}}%;'><span
										class='health'
									>{{system.health.value}}/{{system.health.max}}</span>
								</div>
							</div>
						</div>
						<div class='mana-block'>
							<div class='mana-bar-container'>
								<div class='mana-bar' style='width: {{manaBarWidth}}%;'>
									<span
										class='mana'
									>{{system.mana.value}}/{{system.mana.max}}</span>
								</div>
							</div>
						</div>
					</div>
					</div>
					<div class='info-container'>
						<label for='name' class='input-label'>NAME:</label>
						{{#if isEditing}}
							<!-- Editable fields here -->
							<input
								name='name'
								id='name'
								class='input-text'
								type='text'
								value='{{actor.name}}'
								placeholder='Name'
							/>
						{{else}}
							<!-- Non-editable display here -->
							<span>{{actor.name}}</span>
						{{/if}}

						<label for='age' class='input-label'>AGE:</label>
						{{#if isEditing}}
							<!-- Editable fields here -->
							<input
								type='text'
								id='age'
								class='input-text'
								name='system.age'
								value='{{system.age}}'
								data-dtype='Number'
								placeholder='Age'
							/>
						{{else}}
							<!-- Non-editable display here -->
							<div>{{system.age}}</div>
						{{/if}}
						<label for='race' class='input-label'>RACE:</label>
						{{#if isEditing}}
							<!-- Editable fields here -->
							<input
								type='text'
								id='age'
								class='input-text'
								name='system.race'
								value='{{system.race}}'
								placeholder='Race'
							/>
						{{else}}
							<!-- Non-editable display here -->
							<span>{{system.race}}</span>
						{{/if}}

					</div>
					<div class='attribute-container'>
						<div class='attributes'>

							<label for="sponsor">SPONSOR:</label>
							{{#if isEditing}}
							<!-- Editable fields here -->
							<input
								type='text'
								id='sponsor'
								class='input-text'
								name='system.sponsor'
								value='{{system.sponsor}}'
								placeholder='Sponsor'
							/>
						{{else}}
							<!-- Non-editable display here -->
							<span>{{system.sponsor}}</span>
						{{/if}}
						<label>ATTRIBUTES:</label>
						<label>STIGMAS:</label>
					</div>
					</div>
				</div>
				<div class='body'>
					<div class='stat-related'>
						<div class="combat-stat-container">
							<div class='combat-stat-block'>
							<label
								class='armor-label'
								for='armor-stat'
							>{{system.armor.label}}:&nbsp;</label>
							<span
								class='armor-stat'
							>{{system.armor.value}}+({{system.armor.bonus}})</span>
						</div>
						<div class='combat-stat-block'>
							<label
								class='evasion-label'
								for='evasion-stat'
							>{{system.evasion.label}}:&nbsp;</label>
							<span
								class='evasion-stat'
							>{{system.evasion.value}}+({{system.evasion.bonus}})</span>
						</div>
						<div class='combat-stat-block'>
							<label
								class='accuracy-label'
								for='accuracy-stat'
							>{{system.accuracy.label}}:&nbsp;</label>
							<span
								class='accuracy-stat'
							>{{system.accuracy.value}}+({{system.accuracy.bonus}})</span>
							</div>
							</div>
						<div class='stat-container'>
							{{#each system.stats as |stat key|}}
								<div class='stat flexrow'>
									<label
										for='system.stats.{{key}}.value'
										class='resource-label rollable'
										data-roll='@stats.{{key}}.value'
										data-label='{{stat.label}}'
									>
										{{stat.label}}:
									</label>
									<span class='resource-span'>Lv.</span>
									<span
										class='resource-span'
										name='system.stats.{{key}}.value'
									>{{stat.value}}</span>
									<span
										class='resource-span'
										name='system.stats.{{key}}.value'
									>(+{{stat.bonus}})</span>
									<button
										class='resource-span'
										data-action='attributeLevelUp'
										data-key='{{key}}'
									>+</button>
								</div>
							{{/each}}
						</div>
						
					</div>
					<div class='coin-container flexrow'>
						<label
							for='system.coins'
							class='resource-label'
							data-label='Coins:'
						>
							Coins:
						</label>
						<span
							class='resource-label'
							name='system.coins'
						>{{system.coins}}</span>
						<button
							class='resource-label'
							data-action='openCurrencyPanel'
						>MANAGE COINS</button>
						<button class='resource-label' data-action='sendCoins'>SEND COINS</button>
					</div>
				</div>
			</div>
			<div class='tab' data-tab='inventory'>
				<!-- Inventory content here -->
				{{> inventory}}
			</div>
			<div class='tab' data-tab='abilities'>
				<!-- Abilities content here -->
				<div>THIS IS THE ABILITIES PAGE</div>
			</div>
			<!-- Add more tab content as necessary -->
		</div>

		<div style='height: 50px;'></div>
		<!-- Placeholder spacing -->
	</section>
</form>