<div class='sheet-inventory'>
	<div class='resource-label' id="drop-zone">ADD ITEM</div>

	<div class='item-container'>
		<div>
			{{#each system.items}}
				<div class="inventory-item" data-item-id="{{this._id}}">
					<span class="item-name">{{this.name}}</span>
					<button class="item-equip">EQUIP</button>
				</div>
			{{/each}}
		</div>
	</div>
</div>
